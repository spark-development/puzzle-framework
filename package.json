{
  "name": "@puzzleframework/core",
  "version": "1.6.0",
  "description": "A modular framework for micro applications/services.",
  "main": "src/server.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --exit tests/**/*.test.js",
    "lint": "./node_modules/.bin/eslint ./src",
    "lint-fix": "./node_modules/.bin/eslint --fix ./src",
    "bamboo-lint": "./node_modules/.bin/eslint ./src -f node_modules/eslint-bamboo-formatter/reporter.js",
    "jsdoc": "./node_modules/.bin/jsdoc -p -c ./jsdoc.json ./src",
    "coverage": "./node_modules/.bin/nyc report --reporter=text-lcov | ./node_modules/.bin/coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spark-development/puzzle-framework.git"
  },
  "keywords": [
    "puzzle",
    "framework",
    "micro-apps",
    "micro-services",
    "modular framework",
    "http",
    "web"
  ],
  "author": "Valentin Duricu <valentin.duricu@spark-dev.ro>",
  "bugs": "https://github.com/spark-development/puzzle-framework/issues",
  "license": "MIT",
  "homepage": "https://puzzle.spark-dev.ro/",
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "@puzzleframework/lite": "^1.5.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "mysql2": "^1.6.5",
    "sequelize": "^5.8.12",
    "umzug": "^2.2.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.4",
    "debug": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-bamboo-formatter": "0.1.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-chai-expect": "^1.2.0",
    "eslint-plugin-import": "^2.18.0",
    "husky": "^1.2.0",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "^3.6.2",
    "mocha": "^5.2.0",
    "mocha-bamboo-reporter": "^1.1.1",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2"
  },
  "files": [
    "src",
    "dist"
  ],
  "directories": {
    "doc": "docs",
    "example": "sample",
    "test": "tests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
